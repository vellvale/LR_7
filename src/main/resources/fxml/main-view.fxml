<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="anchorPane" prefHeight="378.0" prefWidth="668.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lr_7.controllers.MainApplicationController">
    <children>
        <VBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" prefHeight="378.0" prefWidth="326.0" spacing="20.0">
            <VBox alignment="CENTER_LEFT" maxWidth="-Infinity" prefHeight="170.0" prefWidth="286.0">
                <children>
                    <Label text="Вывести массив объектов:">
                        <font>
                            <Font size="14.0"/>
                        </font>
                        <VBox.margin>
                            <Insets bottom="10.0"/>
                        </VBox.margin>
                    </Label>
                    <RadioButton fx:id="load1" mnemonicParsing="false" text="загрузка из файла collections.bin">
                        <VBox.margin>
                            <Insets bottom="10.0"/>
                        </VBox.margin>
                    </RadioButton>
                    <RadioButton fx:id="load2" mnemonicParsing="false" text="загрузка из файла collections.txt">
                        <VBox.margin>
                            <Insets bottom="10.0"/>
                        </VBox.margin>
                    </RadioButton>
                    <RadioButton fx:id="load3" mnemonicParsing="false" text="загрузка из файла serialized.bin">
                        <VBox.margin>
                            <Insets bottom="10.0"/>
                        </VBox.margin>
                    </RadioButton>
                    <RadioButton fx:id="load4" mnemonicParsing="false" text="автоматическое заполнение">
                        <VBox.margin>
                            <Insets bottom="10.0"/>
                        </VBox.margin>
                    </RadioButton>
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <children>
                            <Button onAction="#onStartButtonClick" text="Начать" textAlignment="CENTER">
                                <font>
                                    <Font size="14.0"/>
                                </font>
                            </Button>
                            <Button mnemonicParsing="false" onAction="#onClearButtonClick" prefHeight="30.0"
